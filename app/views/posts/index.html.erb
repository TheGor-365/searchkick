<div class="card rounded p-5">
  <h1>Posts</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <hr>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
      <hr><br>
    <% end %>
  </div>
  <%= link_to "New post", new_post_path, class: "mt-5" %>
</div>
