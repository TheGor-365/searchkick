<div class="card rounded p-5">
  <%= render @post %>

  <div class="mt-3">
    <%= link_to "Edit this post", edit_post_path(@post) %> | |
    <%= link_to "Back to posts", posts_path %><hr>

    <%= button_to "Destroy this post", @post, method: :delete, class: "btn-sm btn-danger mt-5" %>
  </div>
</div>
